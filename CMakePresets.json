{
    "version": 9,
    "configurePresets": [
        {
            "name": "enable-testing",
            "hidden": true,
            "cacheVariables": {
                "ENABLE_TESTING": true
            }
        },
        {
            "name": "linux-build",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-linux-clang-libcxx"
            }
        },
        {
            "name": "debug",
            "binaryDir": "build/debug",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib/${presetName}",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "release",
            "inherits": [
                "debug"
            ],
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/bin/${presetName}",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/lib/${presetName}",
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "linux-debug",
            "inherits": [
                "enable-testing",
                "linux-build",
                "debug"
            ]
        },
        {
            "name": "linux-release",
            "inherits": [
                "linux-build",
                "release"
            ]
        }
    ]
}